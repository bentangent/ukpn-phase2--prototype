{
  "env": {
    "browser": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "no-trailing-spaces": [
      "error",
      {"skipBlankLines" : true}
    ],
    "no-plusplus": [
      "error",
      { "allowForLoopAfterthoughts": true }
    ],
    "no-unused-expressions": [
      "warn"
    ],
    "no-undef": [
      "warn"
    ],
    "import/prefer-default-export": "off",
    "no-param-reassign": 0,
    "class-methods-use-this": 0,
    "linebreak-style": 0
  }
}
